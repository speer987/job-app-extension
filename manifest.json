{
  "name": "Job Application Tracker",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "sidePanel",
    "storage"
  ],
  "host_permissions": [
    "https://sheets.googleapis.com/*"
  ],
  "background": {
    "service_worker": "service_worker.js"
  },
  "icons": {
    "16": "circle-check.png",
    "48": "circle-check.png",
    "128": "circle-check.png"
  },
  "action": {
    "default_icon": {
      "16": "circle-check.png",
      "48": "circle-check.png",
      "128": "circle-check.png"
    }
  },
  "side_panel": {
    "default_path": "side_panel.html"
  }
}
